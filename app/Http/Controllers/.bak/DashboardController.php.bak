		$pve = DB::table('payment_voucher_entry')->where('payment_voucher_id',$id)->select('id')->get();
		foreach($pve as $pv) {

			DB::table('account_transaction')->where('voucher_type','PV')->where('voucher_type_id',$pv->id)->update(['status'=>1]);
		}

		return redirect('dashboard');
	}

