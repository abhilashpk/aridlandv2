<?php
declare(strict_types=1);
namespace App\Repositories\Area;

use App\Models\Area;
use App\Repositories\AbstractValidator;
use App\Exceptions\Validation\ValidationException;
use Config;

class AreaRepository extends AbstractValidator implements AreaInterface {
	
	protected $area;
	
	protected static $rules = [
		'code' => 'required|unique:area',
		'name' => 'required|unique:area',
	];
	
	public function __construct(Area $area) {
		$this->area = $area;
		
	}
	
	public function all()
	{
		return $this->area->get();
	}
	
	public function find($id)
	{
		return $this->area->where('id', $id)->first();
	}
	
	public function create($attributes)
	{
		if($this->isValid($attributes)) { 
			
			$this->area->code = $attributes['code'];
			$this->area->name = $attributes['name'];
			$this->area->status = 1;
			$this->area->fill($attributes)->save();
			return true;
		}
		
		//throw new ValidationException('area validation error!', $this->getErrors());
	}
	
	public function update($id, $attributes)
	{
		$this->area = $this->find($id);
		$this->area->fill($attributes)->save();
		return true;
	}
	
	
	public function delete($id)
	{
		$this->area = $this->area->find($id);
		$this->area->delete();
	}
	
	public function areaList()
	{
		//check admin session and apply return $this->area->where('parent_id',0)->where('status', 1)->get();
		return $this->area->get();
	}
	
	public function activeAreaList()
	{
		return $this->area->select('id','name')->where('status', 1)->orderBy('name', 'ASC')->get()->toArray();
	}
	
	public function check_area_code($code, $id = null) {
		
		if($id)
			return $this->area->where('code',$code)->where('id', '!=', $id)->count();
		else
			return $this->area->where('code',$code)->count();
	}
		
	public function check_area_name($name, $id = null) {
		
		if($id)
			return $this->area->where('name',$name)->where('id', '!=', $id)->count();
		else
			return $this->area->where('name',$name)->count();
	}
	
}
