	public function goodsReturnList($type,$start,$limit,$order,$dir,$search)
	{
		$query = $this->goods_return->where('goods_return.status',1);
		$query->leftjoin('jobmaster AS J', function($join) {
							$join->on('J.id','=','goods_return.job_id');
						} );
						
		if($search) {
				
			$query->where(function($qry) use($search) {
				$qry->where('goods_return.voucher_no','LIKE',"%{$search}%")
					->orWhere('J.name', 'LIKE',"%{$search}%");
			});
		}
			
		$query->select('goods_return.*','J.name AS jobname')
					->offset($start)
                    ->limit($limit)
                    ->orderBy($order,$dir);
					
		if($type=='get')
			return $query->get();
		else
			return $query->count();
	}
	
