	public function delete($id)
	{
		$this->goods_return = $this->goods_return->find($id);
		
		//inventory update...
		$items = DB::table('goods_return_item')->where('goods_return_id', $id)->select('item_id','unit_id','quantity')->get();
		
		foreach($items as $item) {
			$this->objUtility->updateLastPurchaseCostAndCostAvgonDeleteGsec($item,$id,'GR');
		}
		DB::table('goods_return_item')->where('goods_return_id', $id)
								->update(['status' => 0, 'deleted_at' => now()]);
		
		//Transaction update.... JUL22
		DB::table('account_transaction')->where('voucher_type', 'GR')->where('voucher_type_id',$id)->update(['status' => 0,'deleted_at' => now(),'deleted_by' => Auth::User()->id ]);
		
		//reset account balance....
		$this->objUtility->tallyClosingBalance($this->goods_return->account_master_id);
		
		$this->objUtility->tallyClosingBalance($this->goods_return->job_account_id);
			DB::table('goods_return')->where('id', $id)
									  ->update(['status' => 0, 'deleted_at' => now(),'deleted_by' => Auth::User()->id ]);	
					
		$this->goods_return->delete();
	}
	
