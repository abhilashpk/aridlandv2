	public function purchaseReturnList()
	{
		$query = $this->goods_return->where('goods_return.status',1);
		return $query->join('jobmaster AS J', function($join) {
							$join->on('J.id','=','goods_return.job_id');
						} )
					->select('goods_return.*','J.name AS jobname')
					->orderBY('goods_return.id', 'DESC')
					->get();
	}
	
