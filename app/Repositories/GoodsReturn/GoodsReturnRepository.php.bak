	public function create($attributes)
	{ 
		if($this->isValid($attributes)) {
			
			DB::beginTransaction();
			try {
				if($this->setInputValue($attributes)) {
					$this->goods_return->status = 1;
					$this->goods_return->created_at = now();
					$this->goods_return->created_by = 1;
					$this->goods_return->fill($attributes)->save();
				}
				
				//invoice items insert
				if($this->goods_return->id && !empty( array_filter($attributes['item_id']))) {
					
					$line_total = 0; $total_quantity = $diffcost = 0;
					
					foreach($attributes['item_id'] as $key => $value){ 
						$goodsReturnItem = new GoodsReturnItem();
						$arrResult 	= $this->setItemInputValue($attributes, $goodsReturnItem, $key, $value, $total_quantity);
						if($arrResult['line_total']) {
							$line_total			   += $arrResult['line_total'];
							$diffcost 			   += $arrResult['diffcost'];
							
							$goodsReturnItem->status = 1;
							$itemObj = $this->goods_return->doItem()->save($goodsReturnItem);
							
							$CostAvg_log = $this->updateLastPurchaseCostAndCostAvg($attributes, $key);
							//update logs
							$logid = $this->setPurchaseLog($attributes, $key, $this->goods_return->id, $CostAvg_log,'add');
							if($logid)
								$this->updateItemQuantity($attributes, $key);
							
							
							//################ Location Stock Entry ####################
							//Item Location specific add....
							$updated = false;
							if(isset($attributes['locqty'][$key])) {
								foreach($attributes['locqty'][$key] as $lk => $lq) {
									if($lq!='') {
										$updated = true;
										$qtys = DB::table('item_location')->where('status',1)->where('location_id', $attributes['locid'][$key][$lk])
																	  ->where('item_id', $value)->where('unit_id', $attributes['unit_id'][$key])
																	  ->whereNull('deleted_at')->select('id')->first();
										if($qtys)
											DB::table('item_location')->where('id', $qtys->id)->update(['quantity' => DB::raw('quantity + '.$lq) ]);
										
										$itemLocationGR = new ItemLocationGR();
										$itemLocationGR->location_id = $attributes['locid'][$key][$lk];
										$itemLocationGR->item_id = $value;
										$itemLocationGR->unit_id = $attributes['unit_id'][$key];
										$itemLocationGR->quantity = $lq;
										$itemLocationGR->status = 1;
										$itemLocationGR->gr_id = $itemObj->id;
										$itemLocationGR->logid = $logid;
										$itemLocationGR->save();
									}
								}
							}
							
							
							//Item default location add...
							if(isset($attributes['default_location']) && ($attributes['default_location'] > 0) && ($updated == false)) {
									
								$qtys = DB::table('item_location')->where('status',1)->where('location_id', $attributes['default_location'])
																  ->where('item_id', $value)->where('unit_id', $attributes['unit_id'][$key])
																  ->whereNull('deleted_at')->select('id')->first();
								if($qtys)
									DB::table('item_location')->where('id', $qtys->id)->update(['quantity' => DB::raw('quantity + '.$attributes['quantity'][$key]) ]);
									
								$itemLocationGR = new ItemLocationGR();
								$itemLocationGR->location_id = $attributes['default_location'];
								$itemLocationGR->item_id = $value;
								$itemLocationGR->unit_id = $attributes['unit_id'][$key];
								$itemLocationGR->quantity = $attributes['quantity'][$key];
								$itemLocationGR->status = 1;
								$itemLocationGR->gr_id = $itemObj->id;
								$itemLocationGR->logid = $logid;
								$itemLocationGR->save();
								
							}
						}
					}
					
					$net_amount = (int)$line_total - (int)$attributes['discount'];
					
					//update discount, total amount, vat and other cost....
					DB::table('goods_return')
								->where('id', $this->goods_return->id)
								->update(['total'    	  => $line_total,
										  'discount' 	  => $attributes['discount'],
										  'net_amount'	  => $net_amount ]
										 );
										  
					//Cost Accounting or Purchase and Sales Method .....
					$this->AccountingMethod($attributes, $line_total, $net_amount, $this->goods_return->id);
					
					//COST DIFFERENCE AC ENTRY....
					if($diffcost > 0)
						$this->CostDifferenceEntry($attributes, $this->goods_return->id, $diffcost);
					
					if($this->goods_return->id) {
						if(Session::get('department')==1) { //if dept active...
							 DB::table('account_setting')
								->where('voucher_type_id', 14) 
								->where('department_id', $attributes['department_id'])
								->update(['voucher_no' => $attributes['voucher_no'] + 1]);
						 } else {
							 DB::table('account_setting')
								->where('voucher_type_id', 14)
								->update(['voucher_no' => $attributes['voucher_no'] + 1]);
						 }
					}
					
				}
				
				DB::commit();
				return true;
		  } catch(\Exception $e) {
				
			DB::rollback(); echo $e->getLine().' '.$e->getMessage();exit;
			return false;
		  }
		}
	}
	
