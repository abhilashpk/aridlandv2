										]);
					}
				} 
										  
				//update voucher no........
				$voucher = ($attributes['from_jv']==1)?9:$attributes['voucher'];
		
				if( ($this->receipt_voucher->id) && ($attributes['curno'] <= $attributes['voucher_no']) ) { 
