		$journalEntryTr->description  = $attributes['customer_account'];
		$journalEntryTr->reference  = $attributes['refno'][$key];
		$journalEntryTr->entry_type  ='Cr';
		$journalEntryTr->amount = $attributes['line_amount'][$key];
			
	}
	
